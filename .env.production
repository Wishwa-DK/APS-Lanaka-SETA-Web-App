# APS Lanka Cybersecurity Platform - Production Environment Configuration
# Copy this file to .env.production and update the values for your production environment

# Database Configuration
MONGODB_URI=mongodb+srv://your-production-cluster/apslanka-cybersecurity

# Security Configuration
JWT_SECRET=your-production-jwt-secret-here
BCRYPT_ROUNDS=12
SESSION_SECRET=your-production-session-secret-here

# Server Configuration - UPDATE THESE FOR PRODUCTION
PORT=5000
FRONTEND_URL=https://your-domain.com
API_URL=https://your-api-domain.com
NEXT_PUBLIC_API_URL=https://your-api-domain.com

# Email Configuration (SMTP) - Production Email Service
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-production-email-password
FROM_EMAIL=noreply@apslanka.com
FROM_NAME=APS Lanka Cybersecurity Platform

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# CORS Configuration
CORS_ORIGIN=https://your-domain.com

# Logging Configuration
LOG_LEVEL=info
ENABLE_ACCESS_LOGS=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Security Headers Configuration
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# Application Configuration
NODE_ENV=production
APP_NAME=APS Lanka Cybersecurity Platform
APP_VERSION=1.0.0